---
import "../styles/global.css";
import "../styles/animations.css";
import NavBar from "@/components/NavBar";
import { createSupabaseServerInstance } from "@/db/supabase";

interface Props {
  title?: string;
}

const { title = "10x Astro Starter" } = Astro.props;

// Get user information on the server
const supabase = createSupabaseServerInstance({
  cookies: Astro.cookies,
  headers: Astro.request.headers,
});

const {
  data: { user },
} = await supabase.auth.getUser();
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script>
      document.documentElement.classList.toggle("dark", localStorage.getItem("theme") === "dark");
    </script>
  </head>
  <body class="flex min-h-full flex-col bg-background text-foreground">
    <NavBar client:load initialUser={user} />
    <div class="flex-1">
      <slot />
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
  }
</style>
