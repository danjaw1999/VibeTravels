---
import Layout from "@/layouts/Layout.astro";
import { createSupabaseServerInstance } from "@/db/supabase";
import { isFeatureEnabled } from "@/lib/featureFlags";

// Check if profile feature is enabled
if (!isFeatureEnabled("profile")) {
  return Astro.redirect("/", 302);
}

const supabase = createSupabaseServerInstance({
  cookies: Astro.cookies,
  headers: Astro.request.headers,
});

// Check if user is authenticated
const {
  data: { user },
  error: authError,
} = await supabase.auth.getUser();

// Redirect unauthenticated users
if (!user || authError) {
  return Astro.redirect("/login", 302);
}
---

<Layout title="Profile - VibeTravels">
  <main class="container mx-auto px-4 py-8" transition:animate="slide">
    <div class="max-w-3xl mx-auto">
      <div class="space-y-6 animate-fade-in">
        <div class="flex items-center gap-4 mb-8">
          <a
            href="/"
            class="text-muted-foreground hover:text-foreground transition-colors inline-flex items-center gap-2 group"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4 transform group-hover:-translate-x-1 transition-transform"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Back to Home
          </a>
        </div>

        <div class="relative">
          <div
            class="absolute inset-0 bg-gradient-to-r from-primary/10 to-primary/5 rounded-lg -z-10 blur-xl animate-pulse"
          >
          </div>
          <h1 class="text-4xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-primary to-primary/60">
            Your Profile
          </h1>
        </div>

        <div class="bg-card text-card-foreground rounded-lg shadow-lg p-6">
          <div class="space-y-4">
            <div>
              <h2 class="text-lg font-semibold">Email</h2>
              <p class="text-muted-foreground">{user.email}</p>
            </div>
            <div>
              <h2 class="text-lg font-semibold">Profile Description</h2>
              <p class="text-muted-foreground">
                {user.user_metadata?.profileDescription || "No description provided"}
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
