---
import Layout from "../layouts/Layout.astro";
import { createSupabaseServerInstance } from "@/db/supabase";
import LoginForm from "@/components/LoginForm";

// Create server-side Supabase client
const supabase = createSupabaseServerInstance({
  cookies: Astro.cookies,
  headers: Astro.request.headers,
});

// Check if user is already authenticated
const {
  data: { user },
  error: authError,
} = await supabase.auth.getUser();

// Redirect authenticated users
if (user && !authError) {
  return Astro.redirect("/", 302);
}

// Set page metadata
const title = "Logowanie | VibeTravels";
---

<Layout title={title}>
  <main class="container mx-auto px-4 py-8 min-h-screen flex items-center justify-center" transition:animate="slide">
    <LoginForm client:load redirectTo="/" />
  </main>
</Layout>
