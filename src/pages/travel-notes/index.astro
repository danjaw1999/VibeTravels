---
import Layout from "@/layouts/Layout.astro";
import type { TravelNoteDTO } from "@/types";
import { CreateNoteButton } from "@/components/CreateNoteButton";
import LoginButton from "@/components/LoginButton";
import { TravelNoteService } from "@/lib/services/travel-note.service";
import { SuggestionsSkeleton } from "@/components/SuggestionsSkeleton";
import "@/styles/animations.css";
import { isFeatureEnabled } from "@/lib/featureFlags";

const travelNoteService = new TravelNoteService(Astro.locals.supabase);

let notes: TravelNoteDTO[] = [];
let error: Error | null = null;
let isLoading = true;
const isCreateNoteEnabled = isFeatureEnabled("create-travel-note");

try {
  const { data } = await travelNoteService.listTravelNotes({
    page: 1,
    limit: 50,
    sortOrder: "desc",
    sortBy: "created_at",
  });
  notes = data;
  isLoading = false;
} catch (e) {
  console.error("Error fetching travel notes:", e);
  error = e as Error;
  isLoading = false;
}

const {
  data: { user },
} = await Astro.locals.supabase.auth.getUser();
---

<Layout title="Travel Notes">
  <main class="container mx-auto px-4 py-8" role="main" transition:animate="slide">
    <div class="flex justify-between items-center mb-8 animate-fade-in">
      <h1
        class="text-3xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-primary to-primary/60 cursor-pointer"
        onclick="window.location.href='/'"
      >
        Travel Notes
      </h1>
      <div class="flex items-center gap-4">
        {isCreateNoteEnabled && <CreateNoteButton client:load isLoggedIn={!!user} />}
      </div>
    </div>

    {
      error && (
        <div class="bg-destructive/15 text-destructive px-4 py-3 rounded-lg mb-6 animate-fade-in" role="alert">
          <div class="flex items-center gap-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
            >
              <circle cx="12" cy="12" r="10" />
              <line x1="12" y1="8" x2="12" y2="12" />
              <line x1="12" y1="16" x2="12" y2="16" />
            </svg>
            Failed to load travel notes. Please try again later.
          </div>
        </div>
      )
    }

    {
      isLoading ? null : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 animate-fade-in">
          {notes.map((note) => {
            const imageUrl = note.attractions?.[0]?.image?.url;

            return (
              <article class="bg-card rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group h-[420px] flex flex-col">
                <div class="relative h-48 overflow-hidden flex-shrink-0">
                  {imageUrl ? (
                    <img
                      src={imageUrl}
                      alt={note.name}
                      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                      onerror="this.onerror=null; this.src='/images/travel-placeholder.jpg';"
                    />
                  ) : (
                    <div class="w-full h-full bg-muted flex items-center justify-center">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-16 w-16 text-muted-foreground/30"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                      >
                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
                        <circle cx="8.5" cy="8.5" r="1.5" />
                        <path d="M21 15l-5-5L5 21" />
                      </svg>
                    </div>
                  )}
                  <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
                </div>

                <div class="p-6 flex flex-col flex-grow">
                  <h2 class="text-xl font-semibold mb-2 text-foreground">{note.name}</h2>
                  <p class="text-muted-foreground mb-4 line-clamp-3 flex-grow">{note.description}</p>
                  <div class="flex justify-between items-center text-sm mt-auto">
                    <time datetime={note.created_at} class="text-muted-foreground flex items-center gap-2">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-4 w-4"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                      >
                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2" />
                        <line x1="16" y1="2" x2="16" y2="6" />
                        <line x1="8" y1="2" x2="8" y2="6" />
                        <line x1="3" y1="10" x2="21" y2="10" />
                      </svg>
                      {new Date(note.created_at).toLocaleDateString()}
                    </time>
                    <a
                      href={`/travel-notes/${note.id}`}
                      class="text-primary hover:text-primary/80 inline-flex items-center gap-2 group"
                    >
                      <span>Read more</span>
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-4 w-4 transform group-hover:translate-x-1 transition-transform"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                      >
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    </a>
                  </div>
                </div>
              </article>
            );
          })}
        </div>
      )
    }

    {
      notes.length === 0 && !error && !isLoading && (
        <div class="text-center py-12 animate-fade-in" role="status">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-16 w-16 mx-auto mb-4 text-muted-foreground/50"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 13h6m-3-3v6m5 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
            />
          </svg>
          <h2 class="text-xl font-semibold mb-2">No travel notes yet</h2>
          <p class="text-muted-foreground">
            {user && isCreateNoteEnabled
              ? "Start sharing your travel experiences by creating your first note!"
              : "Login to start sharing your travel experiences!"}
          </p>
          {!user && (
            <div class="mt-6">
              <LoginButton client:load />
            </div>
          )}
        </div>
      )
    }
  </main>
</Layout>
